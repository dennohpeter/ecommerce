{
  "name": "ecommerce",
  "version": "1.0.0",
  "description": "Ecommerce project for ADBMS",
  "main": "build/server.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "prestart": "yarn build",
    "start": "node build/server.js",
    "db:setup": "bash setup.sh",
    "db:seed": "ts-node-dev src/seedlings/seed.ts",
    "migrate": "source .env; DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?ssl=true node-pg-migrate"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always"
  },
  "dependencies": {
    "argon2": "^0.41.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-validator": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.13.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.0.3",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.7.7",
    "@types/pg": "^8.11.10",
    "@types/uuid": "^10.0.0",
    "node-pg-migrate": "^7.7.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  }
}
